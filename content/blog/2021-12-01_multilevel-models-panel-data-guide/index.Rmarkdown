                ~ifelse(term %in% c("gdpPercap_z", "sd__gdpPercap_z"), 
                        (. / gdp_sd) * 1000, .))) %>% 
  mutate(term = janitor::make_clean_names(term),
         est = round(estimate, 2)) %>% 
  split(~ term)

m_gdp_country_only_log <- tidy(model_gdp_country_only_log) %>% 
